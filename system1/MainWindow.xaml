<Window x:Class="system1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="250" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox Name="FilePathTextBox" Width="300" Margin="5" ToolTip="Enter file path"/>
            <TextBox Name="SearchWordTextBox" Width="300" Margin="5" ToolTip="Enter search word"/>
            <Button Name="StartProcessButton" Content="Start Process" Width="300" Margin="5" Click="StartProcessButton_Click"/>
            <TextBlock Name="ResultTextBlock" HorizontalAlignment="Center" Margin="5" FontSize="16" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
