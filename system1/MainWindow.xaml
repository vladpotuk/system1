<Window x:Class="system1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="system1" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Label Content="Інтервал оновлення (секунди):"/>
            <TextBox x:Name="UpdateIntervalTextBox" Text="1" Width="50"/>
            <Button x:Name="UpdateIntervalButton" Content="Оновити інтервал" Click="UpdateIntervalButton_Click"/>
        </StackPanel>

        <ListView x:Name="ProcessListView" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Ім'я процесу" DisplayMemberBinding="{Binding ProcessName}"/>
                    <GridViewColumn Header="Ідентифікатор" DisplayMemberBinding="{Binding Id}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
